<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :uid, class: "control-label" %>
    <%= text_input f, :uid, class: "form-control" %>
    <%= error_tag f, :uid %>
  </div>

  <div class="form-group">
    <%= label f, :secret, class: "control-label" %>
    <%= text_input f, :secret, class: "form-control" %>
    <%= error_tag f, :secret %>
  </div>

  <div class="form-group">
    <%= label f, :redirect_uri, class: "control-label" %>
    <%= text_input f, :redirect_uri, class: "form-control" %>
    <%= error_tag f, :redirect_uri %>
  </div>

  <div class="form-group">
    <%= label f, :scopes, class: "control-label" %>
    <%= text_input f, :scopes, class: "form-control" %>
    <%= error_tag f, :scopes %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
